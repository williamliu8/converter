<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="@string/tempF2CFormula"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/ID_F2C"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="64dp"/>
    <TextView
            android:text="@string/tempC2FFormula"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/ID_c2F"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.476" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/button_F2C"/>
    <TextView
            android:text="@string/CelsiusResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textF2CResult"
            app:layout_constraintStart_toEndOf="@+id/tempFText"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/ID_F2C" app:layout_constraintHorizontal_bias="0.503"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/button_F2C" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="164dp" android:layout_marginRight="164dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tempFText" android:onClick="tempF2C"
            android:text="@string/temperature"/>
    <EditText
            android:layout_width="164dp"
            android:layout_height="40dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/tempFText"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:hint="@string/Fahrenheit"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/ID_F2C"/>
</android.support.constraint.ConstraintLayout>