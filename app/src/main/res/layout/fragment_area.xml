<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
            android:layout_width="173dp"
            android:layout_height="48dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/sqftInputText" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textAreaFormula"
            android:hint="@string/sqFeet" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"/>
    <EditText
            android:layout_width="173dp"
            android:layout_height="48dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/macreInputText" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/sqMeterInputText"
            android:hint="@string/MetricAcre"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"/>
    <EditText
            android:layout_width="174dp"
            android:layout_height="52dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/hectareInputText"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" android:layout_marginRight="12dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/pingInputText" android:hint="@string/Hectare"
    />
    <TextView
            android:text="@string/area"
            android:layout_width="82dp"
            android:layout_height="46dp"
            android:id="@+id/textAreaFormula"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.469"
            app:layout_constraintVertical_bias="0.057"/>
    <EditText
            android:layout_width="169dp"
            android:layout_height="50dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/pingInputText"
            android:hint="@string/Ping"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textAreaFormula"/>
    <EditText
            android:layout_width="172dp"
            android:layout_height="49dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/sqMeterInputText" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/sqftInputText"
            android:hint="@string/sqMeter"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"/>
    <EditText
            android:layout_width="168dp"
            android:layout_height="49dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/acreInputText"
            android:hint="@string/Acre" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/hectareInputText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:onClick="clearAllEditText()"/>
    <TextView
            android:text="@string/Ping"
            android:layout_width="77dp"
            android:layout_height="33dp"
            android:id="@+id/textView5" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/pingInputText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="112dp" android:layout_marginRight="112dp"/>
    <TextView
            android:text="@string/MetricAcre"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/textView8" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/macreInputText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"/>
    <TextView
            android:text="@string/Acre"
            android:layout_width="77dp"
            android:layout_height="33dp"
            android:id="@+id/textView11" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/acreInputText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="108dp" android:layout_marginRight="108dp"/>
    <TextView
            android:text="@string/Hectare"
            android:layout_width="77dp"
            android:layout_height="33dp"
            android:id="@+id/textView10"
            app:layout_constraintBottom_toTopOf="@+id/hectareInputText" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="112dp"
            android:layout_marginRight="112dp"/>
    <TextView
            android:text="@string/sqMeter"
            android:layout_width="77dp"
            android:layout_height="33dp"
            android:id="@+id/textView9" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/sqMeterInputText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="@string/sqFeet"
            android:layout_width="77dp"
            android:layout_height="33dp"
            android:id="@+id/textView7" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/sqftInputText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
</android.support.constraint.ConstraintLayout>