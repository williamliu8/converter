<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".popupActivity" android:id="@+id/window">

    <EditText
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/caldenInputtext" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:hint="@string/denominator" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/calnumInputtext"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/calnumInputtext" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView21" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:hint="@string/numerator"
    />
    <TextView
            android:text="@string/perunitcalc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="76dp" android:layout_marginStart="76dp"
            android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/calnumInputtext1"
            android:hint="@string/numerator"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView21"
            app:layout_constraintStart_toEndOf="@+id/calnumInputtext" android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/caldenInputtext1"
            android:hint="@string/denominator"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/calnumInputtext1"
            app:layout_constraintStart_toEndOf="@+id/caldenInputtext" android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"/>
    <TextView
            android:text="@string/multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            app:layout_constraintEnd_toStartOf="@+id/calnumInputtext1"
            android:layout_marginEnd="12dp" android:layout_marginRight="12dp" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/textView21"/>
    <TextView
            android:text="@string/equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView25"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/caldenInputtext"
            app:layout_constraintEnd_toStartOf="@+id/calResult" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text="@string/one"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/calResult"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/caldenInputtext1" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="@string/taxrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView22" android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/caldenInputtext" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/calTaxinputtext"
            app:layout_constraintStart_toEndOf="@+id/textView22" android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/calResult" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:hint="@string/taxrate"/>
</android.support.constraint.ConstraintLayout>