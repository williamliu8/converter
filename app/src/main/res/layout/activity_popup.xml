<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".popupActivity" android:id="@+id/window"
        android:background="@drawable/popup_bg"
>

    <EditText
            android:layout_width="90dp"
            android:layout_height="47dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/caldenInputtext" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:hint="@string/denominator" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/calnumInputtext" android:textSize="12dp"/>
    <EditText
            android:layout_width="90dp"
            android:layout_height="47dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/calnumInputtext"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:hint="@string/numerator"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp" android:textSize="12dp"/>
    <EditText
            android:layout_width="90dp"
            android:layout_height="47dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/calnumInputtext1"
            android:hint="@string/numerator"
            android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="12dp" app:layout_constraintStart_toEndOf="@+id/calnumInputtext"
            android:layout_marginStart="14dp" android:layout_marginLeft="14dp"/>
    <EditText
            android:layout_width="90dp"
            android:layout_height="47dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/caldenInputtext1"
            android:hint="@string/denominator"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/calnumInputtext1"
            app:layout_constraintStart_toEndOf="@+id/caldenInputtext" android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp" android:textSize="12dp"/>
    <TextView
            android:text="@string/multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            app:layout_constraintEnd_toStartOf="@+id/calnumInputtext1"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/caldenInputtext"
            android:textSize="16dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="@+id/calnumInputtext" app:layout_constraintHorizontal_bias="0.8"/>
    <TextView
            android:text="@string/equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView25"
            app:layout_constraintTop_toBottomOf="@+id/caldenInputtext1"
            app:layout_constraintStart_toEndOf="@+id/caldenInputtext1" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="16dp"/>
    <TextView
            android:text="@string/one"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/calResult"
            app:layout_constraintStart_toEndOf="@+id/textView25"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/calTaxinputtext" android:textSize="16dp"
            android:gravity="left|center_vertical"/>
    <EditText
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/calTaxinputtext"
            android:hint="@string/taxrate"
            app:layout_constraintStart_toEndOf="@+id/textView21" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="29dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="12dp"/>
    <TextView
            android:text="@string/multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            app:layout_constraintStart_toEndOf="@+id/calnumInputtext1" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="16dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="@+id/calnumInputtext1"/>
</android.support.constraint.ConstraintLayout>